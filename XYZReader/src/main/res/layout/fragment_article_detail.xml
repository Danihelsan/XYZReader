<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_insets_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/detail_byline_vertical_margin"
            android:layout_marginBottom="@dimen/detail_byline_vertical_margin"
            android:layout_marginLeft="@dimen/detail_inner_horiz_margin"
            android:layout_marginRight="@dimen/detail_inner_horiz_margin"
            android:layout_marginStart="@dimen/detail_inner_horiz_margin"
            android:layout_marginEnd="@dimen/detail_inner_horiz_margin"
            android:id="@+id/article_byline"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_gravity="end|right"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/article_body"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_inner_horiz_margin"
            android:layout_marginRight="@dimen/detail_inner_horiz_margin"
            android:layout_marginStart="@dimen/detail_inner_horiz_margin"
            android:layout_marginEnd="@dimen/detail_inner_horiz_margin"
            android:paddingBottom="@dimen/detail_body_bottom_margin"
            android:textSize="@dimen/detail_body_text_size"
            android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
